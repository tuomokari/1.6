/*#region Smartphone screens*/

.__show_mobile {
    //display: none;
}

@media only screen and (max-width: @screen-smartphone) {

    #__applicationview {
        padding-top: 0;
        height: 100%;
        min-height: 100%;

        #__applicationview_inner {
            padding-top: @basemeasure;
            height: 100%;
            min-height: 100%;

            &:before {
                top: 0; // fix shadow to top
            }
        }
    }

    .__pageselector {
        /*text-align: left;*/

        a[disabled] {
            display: none;
        }
    }

    .__show_desktop {
        display: none;
    }

    .__show_mobile {
        display: block;
    }

    .__hideonmobile {
        display: none;
    }

    #__menubar_logo_mobile {
        display: block;
    }

    #__menubar_menuitems {
        display: none;
    }
    .__userinfo {
        display: none !important;
    }

    table.__table {
        td, th {
            border-radius: 0 !important;
        }

        .__displayformrow {
            td, th {
                display: block;
            }

            th {
                padding-bottom: 0;
            }

            td {
                padding-top: 0;
            }
        }
    }

    .__listview_mobile {
        h2 {
            font-size: 19px;
        }
    }
}
/*#endregion*/
